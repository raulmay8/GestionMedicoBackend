@model GestionMedicoBackend.Models.EmailTemplateModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Restablecer Contraseña</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            margin: 0 auto;
            padding: 20px;
            max-width: 600px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .header {
            text-align: center;
        }

        .content {
            margin-top: 20px;
        }

        .footer {
            margin-top: 20px;
            text-align: center;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Restablecer tu Contraseña</h1>
        </div>
        <div class="content">
            <p>Hola @Model.Username,</p>
            <p>Hemos recibido una solicitud para restablecer tu contraseña. Si no solicitaste un cambio de contraseña, por favor ignora este correo.</p>
            <p>Para restablecer tu contraseña, haz clic en el siguiente enlace:</p>
            <p><a href="@Model.ConfirmationLink">Restablecer Contraseña</a></p>
            <p>Este enlace es válido por una sola vez y expira en 1 hora.</p>
        </div>
        <div class="footer">
            <p>&copy; 2024 Gestión Médico. Todos los derechos reservados.</p>
        </div>
    </div>
</body>
</html>
