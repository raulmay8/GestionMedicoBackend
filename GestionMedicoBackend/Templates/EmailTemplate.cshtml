@model GestionMedicoBackend.Models.EmailTemplateModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Confirmar Cuenta</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            margin: 0 auto;
            padding: 20px;
            max-width: 600px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .header {
            text-align: center;
        }
        .content {
            margin-top: 20px;
        }
        .footer {
            margin-top: 20px;
            text-align: center;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Confirma tu Cuenta</h1>
        </div>
        <div class="content">
            <p>Hola @Model.Username,</p>
            <p>Por favor confirma tu cuenta haciendo clic en el siguiente enlace:</p>
            <p><a href="@Model.ConfirmationLink">Confirmar cuenta</a></p>
        </div>
        <div class="footer">
            <p>&copy; 2024 Gestión médico. Todos los derechos reservados.</p>
        </div>
    </div>
</body>
</html>
